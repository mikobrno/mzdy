@model SVJPortal.Web.Models.ViewModels.SVJIndexViewModel
@{
    ViewData["Title"] = "Správa SVJ";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-building text-primary"></i>
        Správa SVJ
    </h1>
    <div>
        @if (User.IsInRole("HlavniUcetni") || User.IsInRole("SuperAdministrator"))
        {
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="fas fa-plus"></i>
                Nové SVJ
            </a>
        }
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Celkem SVJ
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.SVJs.Count</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-building fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Celkem zaměstnanců
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.SVJs.Sum(s => s.Zamestnanci.Count)</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Aktivní zaměstnanci
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.SVJs.Sum(s => s.Zamestnanci.Count(e => e.DatumUkonceni == null))</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-check fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Nevyplacené mzdy
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.SVJs.Sum(s => s.Mzdy.Count(p => p.Stav != SVJPortal.Web.Models.StavMzdyEnum.Vyplacena))</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-exclamation-triangle fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- SVJ Cards -->
<div class="row">
    @foreach (var svj in Model.SVJs)
    {
        <div class="col-xl-4 col-lg-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">@svj.Nazev</h6>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-action="Details" asp-route-id="@svj.Id">
                                <i class="fas fa-eye"></i> Detail
                            </a>
                            @if (User.IsInRole("HlavniUcetni") || User.IsInRole("SuperAdministrator"))
                            {
                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@svj.Id">
                                    <i class="fas fa-edit"></i> Upravit
                                </a>
                            }
                            <a class="dropdown-item" asp-controller="Employee" asp-action="Index" asp-route-svjId="@svj.Id">
                                <i class="fas fa-users"></i> Zaměstnanci
                            </a>
                            <a class="dropdown-item" asp-controller="Payroll" asp-action="Index" asp-route-svjId="@svj.Id">
                                <i class="fas fa-money-bill-wave"></i> Mzdy
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <small class="text-muted">IČO:</small>
                        <strong>@svj.ICO</strong>
                    </div>
                    @* Model SVJ nemá Mesto v této verzi *@
                    @if (!string.IsNullOrEmpty(svj.Email))
                    {
                        <div class="mb-2">
                            <small class="text-muted">E-mail:</small>
                            <a href="mailto:@svj.Email">@svj.Email</a>
                        </div>
                    }
                    
                    <div class="row text-center mt-3">
                        <div class="col-4">
                            <div class="text-primary font-weight-bold">@svj.Zamestnanci.Count(e => e.DatumUkonceni == null)</div>
                            <small class="text-muted">Zaměstnanci</small>
                        </div>
                        <div class="col-4">
                            <div class="text-success font-weight-bold">@svj.Mzdy.Count(p => p.Mesic == DateTime.Now.Month && p.Rok == DateTime.Now.Year)</div>
                            <small class="text-muted">Mzdy tento měsíc</small>
                        </div>
                        <div class="col-4">
                            @{
                                var pendingPayrolls = svj.Mzdy.Count(p => p.Stav != SVJPortal.Web.Models.StavMzdyEnum.Vyplacena);
                            }
                            <div class="@(pendingPayrolls > 0 ? "text-warning" : "text-success") font-weight-bold">@pendingPayrolls</div>
                            <small class="text-muted">Nevyplacené</small>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="Details" asp-route-id="@svj.Id" class="btn btn-primary btn-sm btn-block">
                        <i class="fas fa-arrow-right"></i> Detail SVJ
                    </a>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.SVJs.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-building fa-3x text-gray-300 mb-3"></i>
        <h5 class="text-gray-600">Žádná SVJ nebyla nalezena</h5>
        <p class="text-muted">Začněte vytvořením nového SVJ</p>
        @if (User.IsInRole("HlavniUcetni") || User.IsInRole("SuperAdministrator"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Vytvořit první SVJ
            </a>
        }
    </div>
}
