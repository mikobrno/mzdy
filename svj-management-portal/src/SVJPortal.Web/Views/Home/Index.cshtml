@{
    ViewData["Title"] = "SVJ Management Portal";
}

<div class="text-center">
    <h1 class="display-4">Vítejte v SVJ Management Portal</h1>
    <p class="lead">Moderní řešení pro správu mzdové a komunikační agendy SVJ</p>
    
    <div class="row mt-5">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <i class="fas fa-building fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Správa SVJ</h5>
                    <p class="card-text">Centralizovaná správa všech vašich SVJ na jednom místě</p>
                    <a asp-controller="SVJ" asp-action="Index" class="btn btn-primary">Spravovat SVJ</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Zaměstnanci</h5>
                    <p class="card-text">Evidence a správa zaměstnanců všech SVJ</p>
                    <a asp-controller="Employee" asp-action="Index" class="btn btn-success">Správa zaměstnanců</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body text-center">
                    <i class="fas fa-money-bill-wave fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Mzdová agenda</h5>
                    <p class="card-text">Automatizované zpracování mezd a výpočty</p>
                    <a asp-controller="Payroll" asp-action="Index" class="btn btn-info">Zpracovat mzdy</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-5">
        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-lg btn-primary">
            <i class="fas fa-tachometer-alt"></i>
            Přejít na Dashboard
        </a>
    </div>
</div>
