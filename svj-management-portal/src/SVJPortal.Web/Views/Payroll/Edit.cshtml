@model SVJPortal.Web.Models.Payroll

<h2>Upravit mzdu</h2>

<form method="post" action="/Payroll/Edit">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="HrubaMzda">Hrubá mzda</label>
        <input type="number" id="HrubaMzda" name="HrubaMzda" value="@Model.HrubaMzda" class="form-control" />
    </div>

    <div class="form-group">
        <label for="SocialniPojisteni">Sociální pojištění</label>
        <input type="number" id="SocialniPojisteni" name="SocialniPojisteni" value="@Model.SocialniPojisteni" class="form-control" />
    </div>

    <div class="form-group">
        <label for="ZdravotniPojisteni">Zdravotní pojištění</label>
        <input type="number" id="ZdravotniPojisteni" name="ZdravotniPojisteni" value="@Model.ZdravotniPojisteni" class="form-control" />
    </div>

    <div class="form-group">
        <label for="DanZPrijmu">Daň z příjmu</label>
        <input type="number" id="DanZPrijmu" name="DanZPrijmu" value="@Model.DanZPrijmu" class="form-control" />
    </div>

    <div class="form-group">
        <label for="CistaMzda">Čistá mzda</label>
        <input type="number" id="CistaMzda" name="CistaMzda" value="@Model.CistaMzda" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Uložit</button>
</form>
